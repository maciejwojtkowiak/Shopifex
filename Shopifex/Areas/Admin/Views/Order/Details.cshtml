@model Shopifex.Models.Order

<h2>Szczegóły Zamówienia #@Model.Id</h2>

<p><strong>Imię i nazwisko:</strong> @Model.FullName</p>
<p><strong>Adres:</strong> @Model.Address</p>
<p><strong>Telefon:</strong> @Model.Phone</p>
<p><strong>Email:</strong> @Model.Email</p>
<p><strong>Data zamówienia:</strong> @Model.CreatedAt.ToString("g")</p>

<h3>Produkty</h3>
<table class="table">
    <thead>
        <tr>
            <th>Produkt</th>
            <th>Ilość</th>
            <th>Cena jednostkowa</th>
            <th>Łączna cena</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cart.Items)
        {
            <tr>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.Product?.Price</td>
                <td>$@(item.Product.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Powrót</a>