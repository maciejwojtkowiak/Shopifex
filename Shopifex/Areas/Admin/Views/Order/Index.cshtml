@model IEnumerable<Shopifex.Models.Order>

<h2>Lista Zamówień</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nr Zamówienia</th>
            <th>Klient</th>
            <th>Email</th>
            <th>Data Utworzenia</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.FullName</td>
                <td>@order.Email</td>
                <td>@order.CreatedAt.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary">Szczegóły</a>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>