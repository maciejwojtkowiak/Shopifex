@model Shopifex.Models.Order
@using Shopifex.Constants

<h2>Utwórz nowe zamówienie</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Status</label>
        <select asp-for="Status" class="form-control">
            @foreach (OrderStatusEnum status in Enum.GetValues(typeof(OrderStatusEnum)))
            {
                <option value="@status">
                    @OrderStatusDictionary.GetOrderStatus(status)
                </option>
            }
        </select>
    </div>

    <h4>Produkty</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Produkt</th>
                <th>Ilość</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var product in ViewData["Products"] as List<Shopifex.Models.Product>)
            {
                <tr>
                    <td>
                        <input type="checkbox" name="selectedProductIds" value="@product.Id" />
                        @product.Name
                    </td>
                    <td>
                        <input type="number" name="quantities" min="1" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Utwórz zamówienie</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>